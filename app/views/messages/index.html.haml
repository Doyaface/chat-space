<!DOCTYPE html>
%html{ lang: "ja"}
%head
  .chat-side
    %header.side-header
      .side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new_group
            =link_to do
              = fa_icon "pencil-square-o", class: 'icon'
          %li.side-header__box__menu__edit_user
            =link_to edit_user_path(current_user) do
              =fa_icon 'cog', class: 'icon'
    .groups
      .group
        .group__group-name group name
        .group__latest-message latest message
  .chat-main
    %header.main-header
      .main-header__left-box
        .main-header__left-box__current-group current group
        %ul.main-header__left-box__member-list
          Member:
          %li.main-header__leftbox__member-list__member groupmember
      %a.main-header__right-box
        .main-header__right-box__edit-btn Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker talker
          %p.message__upper-info__date 2019/4/1(Mon)00:00:00
        %p.message__text message text
    .form
      %form.new_message
        .input-box
          %input#message_content.input-box__text{name:  "message[content]", placeholder: "type a message", type: "text"}/
          %label.input-box__image
            %i.fa.fa-image
            %input.input-box__image__file{name: "message[image]" , type: "file"}/
        %input.submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/
